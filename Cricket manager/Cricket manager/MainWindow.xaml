<Window x:Class="Cricket_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cricket_manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Cricket Team Manager" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBox x:Name="PlayerNameTextBox" Width="200" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="AddPlayerButton" Content="Add Player" Width="100" Margin="5" Click="AddPlayerButton_Click"/>
                <Button x:Name="RemovePlayerButton" Content="Remove Player" Width="100" Margin="5" Click="RemovePlayerButton_Click"/>
            </StackPanel>

            <ListBox x:Name="PlayersListBox" Width="200" Height="150" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
